# name: test/sql/aggregate/group/group_by_limits.test
# description: Test aggregates on numeric limits
# group: [group]



# TINYINT limits
statement ok
CREATE TABLE t(t_k0 TINYINT);

statement ok
INSERT INTO t VALUES (-128), (127);

query II
SELECT t_k0, COUNT(*) FROM t GROUP BY t_k0 ORDER BY 1;
----
-128	 1
127	1

statement ok
DROP TABLE t;

