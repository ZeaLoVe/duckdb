# name: test/sql/types/BIGINT/test_BIGINT_auto_cast.test
# description: Test BIGINT auto cast
# group: [BIGINT]



# test auto cast of all integer types to BIGINT
query IIII
SELECT 10000000000000000000::BIGINT + 100::TINYINT, 10000000000000000000::BIGINT + 100::SMALLINT, 10000000000000000000::BIGINT + 100::INTEGER, 10000000000000000000::BIGINT + 100::BIGINT;
----
10000000000000000100
10000000000000000100
10000000000000000100
10000000000000000100

# test auto cast of BIGINT -> DOUBLE
query I
SELECT 100::BIGINT + 0.5
----
100.5

query I
SELECT COS(100::BIGINT)
----
0.862318872287684

# test auto cast of BIGINT -> VARCHAR
query I
SELECT CONCAT('hello number ', 100::BIGINT)
----
hello number 100